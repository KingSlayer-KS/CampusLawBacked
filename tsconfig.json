{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",              // <-- FIX
    "moduleResolution": "NodeNext",    // matches the module setting
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}